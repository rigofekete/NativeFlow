    CONTROL "URGENT", IDBUTTON1, "BUTTON", WS_TABSTOP | WS_VISIBLE | WS_CHILD,     29, 20, 70, 15
    CONTROL "SOON", IDBUTTON4, "BUTTON", WS_TABSTOP | WS_VISIBLE | WS_CHILD,    29, 40, 70, 15
    CONTROL "FREE", IDBUTTON3, "BUTTON", WS_TABSTOP | WS_VISIBLE | WS_CHILD,  29, 60, 70, 15
    // LTEXT "", IDC_STATIC, 10, 10, 240, 50
END

